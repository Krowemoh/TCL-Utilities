*
    GIT.FILENAME = 'RENAME'
    GIT.REPO = 'https://github.com/Krowemoh/TCL-Utilities.git'
*
* VERSION
*
    VERSION = '1'
*
    @USER1 = 'RENAME'
    @USER2 = 'RENAME'
*
    EQU TRUE TO 1
    EQU FALSE TO 0
*
    ARGS = SENTENCE()
    CONVERT ' ' TO @AM IN ARGS
    DELETE.FLAG = TRUE
*
    ARGS.LEN = DCOUNT(ARGS,@AM)
*
    IF ARGS.LEN = 1 THEN
        PRINT 'RENAME - Rename Command'
        PRINT
        PRINT '    RENAME {FILE} {CURRENT.NAME} {NEW.NAME}'
        PRINT
        STOP
*
    END ELSE IF ARGS.LEN # 4 THEN
        PRINT 'Invalid option.'
        STOP
    END
*
    FILE = ARGS<2>
    CURRENT.NAME = ARGS<3>
    NEW.NAME = ARGS<4>
*
    IF CURRENT.NAME = NEW.NAME THEN
        PRINT 'Cannot rename to the same name.'
        STOP
    END
*    
    ARGS = INSERT(ARGS,4;FILE)
*
    CLEARSELECT
*
    CALL MOVE.FILES(ARGS,DELETE.FLAG)
*
* END OF PROGRAM
*
    END
*
